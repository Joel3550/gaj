<% layout('layout') %>

<section class="invoice" ng-app="app" ng-controller="validationAudienceController">
    <!-- title row -->
    <div class="row">
        <div class="col-xs-12">
            <h2 class="page-header">
                <i class="fa fa-globe"></i> ROLE D'AUDIENCE {{validationAudienceTransItem.libelle_nature | uppercase}}
                <small class="pull-right">Date d'audience: {{validationAudienceTransItem.date_audience}}</small>
            </h2>
        </div>
        <!-- /.col -->
    </div>
    <div class="row">
        <div class="col-xs-12">
            <div class="alert {{message.class}}">{{message.msg}}</div>
        </div>
    </div>
    <!-- info row -->
    <div class="row invoice-info">
        <div class="col-sm-4 invoice-col">
            <address>
                NUMERO DE DOSSIER : <strong>{{validationAudienceTransItem.numero_ordre}}</strong><br>
                OBJET : <strong>{{validationAudienceTransItem.objet_affaire}}</strong><br>
                CHAMBRE : <strong>{{validationAudienceTransItem.libelle_chambre}}</strong><br>
            </address>
        </div>
        <!-- /.col -->
        <div class="col-sm-4 invoice-col">
            <address>
                OBSERVATION : <strong>{{validationAudienceTransItem.observation}}</strong><br>
            </address>
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->

    <!-- Table row -->
    <div class="row">
        <div class="col-xs-12 table-responsive">
            <table class="table table-striped">
                <thead>
                <tr>
                    <th>Nom(s) individu(s)</th>
                    <th>Prenom(s) individu(s)</th>
                    <th>Parie(s)</th>
                </tr>
                </thead>
                <tbody>
                <tr ng-repeat="liste in individusForAffaire">
                    <td>{{liste.nom_individu | uppercase}}</td>
                    <td>{{liste.prenom_individu | uppercase}}</td>
                    <td>{{liste.libelle_typeIndividu | uppercase}}</td>
                </tr>
                </tbody>
            </table>
        </div>
        <!-- /.col -->
    </div>
    <div class="row">
        <div class="col-xs-12">
            <p class="lead">REGLEMENT EFFECTUE PAR {{validationAudienceTransItem.nom_individu | uppercase}}</p>
        </div>
        <div class="col-xs-6">
            <div class="table-responsive">
                <table class="table">
                    <tr>
                        <th style="width:50%">Montant HT:</th>
                        <td>{{validationAudienceTransItem.montant}}</td>
                    </tr>
                    <tr>
                        <th>TVA (18%)</th>
                        <td>0</td>
                    </tr>
                    <tr>
                        <th>Montant TTC:</th>
                        <td>{{validationAudienceTransItem.montant}}</td>
                    </tr>
                </table>
            </div>
        </div>
    <!-- /.col -->
    </div>
    <!-- /.row -->

    <!-- this row will not appear when printing -->
    <form class="form-horizontal" name="formAffaire" role="form" method="post" novalidate>
        <div class="box-body">
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <div class="checkbox">
                        <label>
                            <input type="checkbox" ng-model="validationAudienceTransItem.valide" required class="icheckbox_flat-green"> Valider
                        </label>
                    </div>
                </div>
            </div>
        </div>
        <div class="box-footer">
            <div class="col-xs-12">
                <a href="/listeAudiences" class="btn btn-default"><i class="fa fa-arrow-circle-left"></i> Retour a la liste</a>
                <button ng-disabled="formAffaire.$invalid" type="button" ng-show="individusForAffaire && validationAudienceTransItem.montant" class="btn btn-success pull-right" ng-click="formAffaire.$valid && validationAudience_FC()"><i class="fa fa-save"></i> Valider l'audience
                </button>
            </div>
        </div>
    </form>
    <!-- /.content -->
    <div class="clearfix"></div>
</section>

<script src="/angular/angular.js"></script>
<script src="/angular/angular.min.js"></script>
<script src="//ajax.googleapis.com/ajax/libs/angularjs/1.5.3/angular-animate.js"></script>
<script src="//angular-ui.github.io/bootstrap/ui-bootstrap-tpls-1.3.2.js"></script>
<script src="/javascripts/app/roleAudience/validationAudienceController.js"></script>
<% layout('layout') %>

<!-- Horizontal Form -->

<div class="col-md-6">
    <div class="box box-info" ng-app="app" ng-controller="typeIndividuController">
        <div class="box-header with-border">
            <h3 class="box-title">Formulaire d'ajout d'un type individu</h3>
        </div>
        <!-- /.box-header -->
        <!-- form start -->
        <form class="form-horizontal" name="formTypeIndividu" role="form" method="post" novalidate>
            <div class="box-body">
                <div class="form-group">
                    <label for="libelle_typeIndividu" class="col-sm-4 control-label">libelle type individu</label>

                    <div class="col-sm-8">
                        <input type="text" class="form-control" style="width:100%" name="libelle_typeIndividu" id="libelle_typeIndividu"
                               placeholder="Entrer le libelle du type" ng-model="typeIndividuFormItems.libelle_typeIndividu"
                               ng-minlength="3" required>
                        <span ng-show="formTypeIndividu.libelle_typeIndividu.$error.minlength" class="help-block">Le libelle du type doit avoir 3 caracteres minimum</span>
                        <!--<span ng-show="formTypeIndividu.libelle_typeIndividu.$invalid && !formTypeIndividu.libelle_typeIndividu.$pristine" class="help-block">Champ requis</span>-->
                    </div>
                </div>
            </div>
            <!-- /.box-body -->
            <div class="box-footer">
                <button type="button" class="btn btn-primary" ng-click="formTypeIndividu.$valid && ajouterTypeIndividu_FC(typeIndividuFormItems)">Ajouter un type</button>
                <a href="/formAjoutIndividu" class="btn btn-warning">Continuer la saisie</a>
                <button type="reset" class="btn btn-danger">Annuler</button>
            </div>
            <!-- /.box-footer -->
        </form>
    </div>
</div>

<script src="/angular/angular.js"></script>
<script src="/angular/angular.min.js"></script>
<script src="//ajax.googleapis.com/ajax/libs/angularjs/1.5.3/angular-animate.js"></script>
<script src="//angular-ui.github.io/bootstrap/ui-bootstrap-tpls-1.3.2.js"></script>
<script src="/javascripts/app/typeIndividu/typeIndividuController.js"></script>
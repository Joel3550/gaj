    <div class="row">
        <div class="col-xs-12">
            <div class="modal-header" style="background-color:#357ca5; color:#fff">
                <span><i class="fa fa-info-circle"></i> FORMULAIRE DE MODIFICATION D'UN AGENT</span>
            </div>
        </div>
        <!-- /.col -->
    </div>
    <div class="row">
        <div class="col-xs-12">
            <div ng-show="message" class="alert {{message.class}}">{{message.msg}}</div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div role="form">
                <form class="form-horizontal" name="form.agentModifForm" role="form" method="post" novalidate>
                    <div class="modal-body">
                        <div class="form-group">
                            <label for="nom_agent" class="col-sm-4 control-label">Nom agent <span style="color:#dd4b39">(*)</span></label>

                            <div class="col-sm-5">
                                <input type="text" class="form-control" style="width:100%" name="nom_agent" id="nom_agent"
                                       placeholder="Entrer le nom de l'agent" ng-model="agentModifItem.nom_agent"
                                       ng-minlength="3" required>
                                <span ng-show="form.agentModifForm.nom_agent.$error.minlength" class="help-block" style="color:#dd4b39">Le nom de l'agent doit avoir 3 caracteres minimum</span>
                                <span ng-show="form.agentModifForm.nom_agent.$invalid && !form.agentModifForm.nom_agent.$pristine" class="help-block danger" style="color:#dd4b39">Champ requis</span>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-sm-4 control-label">Prenom agent</label>
                            <div class="col-sm-5">
                                <input type="text" class="form-control" style="width:100%" name="prenom_agent" id="prenom_agent"
                                       placeholder="Entrer le prenom de l'agent" ng-model="agentModifItem.prenom_agent"
                                       ng-minlength="3" required>
                                <span ng-show="form.agentModifForm.prenom_agent.$error.minlength" class="help-block" style="color:#dd4b39">Le prenom de l'agent doit avoir 3 caracteres minimum</span>
                                <span ng-show="form.agentModifForm.prenom_agent.$invalid && !form.agentModifForm.prenom_agent.$pristine" class="help-block danger" style="color:#dd4b39">Champ requis</span>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-5">
                            <input type="hidden" class="form-control" style="width:100%" name="id_agent" id="id_agent"
                                   ng-model="agentModifItem.id_agent">
                        </div>
                    </div>

                    <div class="modal-footer" style="background-color:#357ca5; color:#fff">
                        <div class="col-xs-12">
                            <button type="button" class="btn btn-danger" ng-click="cancel()"><i class="fa fa-close"></i> Fermer</button>
                            <button type="button" class="btn btn-outline pull-right" ng-disabled="form.agentModifForm.$invalid" ng-click="form.agentModifForm.$valid && modifierAgent_FC(agentModifItem)"><i class="fa fa-refresh"></i> Appliquer
                            </button>
                        </div>
                    </div>
                    <!-- /.box-footer -->
                </form>
            </div>
        </div>
    </div>

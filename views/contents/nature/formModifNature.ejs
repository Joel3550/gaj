<div class="row">
    <div class="col-xs-12">
        <div class="modal-header" style="background-color:#357ca5; color:#fff">
            <i class="fa fa-info-circle"></i> FORMULAIRE DE MODIFICATION D'UNE CHAMBRE
        </div>
    </div>
    <!-- /.col -->
</div>

<div class="row">
    <div class="col-xs-12">
        <div ng-show="message" class="alert {{message.class}}">{{message.msg}}</div>
    </div>
</div>

<div class="row">
    <div class="col-xs-12">
        <form class="form-horizontal" name="form.natureModifForm" role="form" method="post" novalidate>
            <div class="modal-body">
                <div class="form-group">
                    <label for="libelle_nature" class="col-sm-4 control-label">libelle nature <span style="color: #dd4b39">(*)</span></label>

                    <div class="col-sm-8">
                        <input type="text" class="form-control" style="width:100%" name="libelle_nature" id="libelle_nature"
                               placeholder="Entrer le libelle du type" ng-model="modifFormItems.libelle_nature"
                               ng-minlength="3" required>
                        <span ng-show="form.natureModifForm.libelle_nature.$error.minlength" class="help-block" style="color: #dd4b39">Le libelle du type doit avoir 3 caracteres minimum</span>
                        <span ng-show="form.natureModifForm.libelle_nature.$invalid && !form.natureModifForm.libelle_nature.$pristine" style="color: #dd4b39" class="help-block">Champ requis</span>
                    </div>
                    <div class="col-sm-8">
                        <input type="hidden" class="form-control" style="width:100%" name="id_nature" id="id_nature"
                               ng-model="modifFormItems.id_nature">
                    </div>
                </div>
            </div>
            <!-- /.box-body -->
                <div class="modal-footer" style="background-color:#357ca5; color:#fff">
                    <button type="button" class="btn btn-danger" ng-click="cancel()"><i class="fa fa-close"></i> Fermer</button>
                    <button type="button" class="btn btn-outline" ng-disabled="form.natureModifForm.$invalid" ng-click="form.natureModifForm.$valid && modifierNature_FC(modifFormItems)"><i class="fa fa-refresh"></i> Appliquer</button>
                </div>
            <!-- /.box-footer -->
        </form>
    </div>
</div>

<script src="/angular/angular.js"></script>
<script src="/angular/angular.min.js"></script>
<script src="//ajax.googleapis.com/ajax/libs/angularjs/1.5.3/angular-animate.js"></script>
<script src="//angular-ui.github.io/bootstrap/ui-bootstrap-tpls-1.3.2.js"></script>
<script src="/javascripts/app/nature/natureController.js"></script>
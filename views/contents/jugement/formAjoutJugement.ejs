<% layout('layout') %>


<section class="invoice" ng-app="app" ng-controller="jugementController">

    <div class="row">
        <div class="col-xs-12">
            <h2 class="page-header">
                <i class="fa fa-globe"></i> FORMULAIRE DE SAISIE D'AUDIENCES
                <small class="pull-right">DATE : </small>
            </h2>
        </div>
        <!-- /.col -->
    </div>

    <div class="row">
        <div class="col-xs-12">
            <div class="alert {{message.class}}">{{message.msg}}</div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div role="form">
                <form class="form-horizontal" name="formJugement" role="form" method="post" novalidate>
                    <div class="box-body">
                        <div class="form-group">
                            <label for="president" class="col-sm-4 control-label">Nom et Prenom du President <span style="color:#dd4b39">(*)</span></label>

                            <div class="col-sm-5">
                                <input type="text" class="form-control" style="width:100%" name="president" id="president"
                                       placeholder="Entrer le nom et le prenom du president" ng-model="jugementFormItems.president"
                                       ng-minlength="3" required>
                                <span ng-show="formJugement.president.$error.minlength" class="help-block" style="color:#dd4b39">Le nom doit avoir 3 caracteres minimum</span>
                                <span ng-show="formJugement.president.$invalid && !formJugement.president.$pristine" class="help-block" style="color:#dd4b39">Champ reuis</span>
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="assesseurs" class="col-sm-4 control-label">Assesseurs</label>

                            <div class="col-sm-5">
                                <textarea class="form-control" rows="3" ng-model="jugementFormItems.assesseurs" placeholder="Nom et prenoms des assesseurs"></textarea>
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="substitut" class="col-sm-4 control-label">Substitut du P.R</label>

                            <div class="col-sm-5">
                                <input type="text" class="form-control" style="width:100%" name="substitut" id="substitut"
                                       placeholder="Entrer le nom et le prenom du substitut du P.R" ng-model="jugementFormItems.substitut"
                                       ng-minlength="3">
                                <span ng-show="formJugement.substitut.$error.minlength" class="help-block" style="color:#dd4b39">Le nom doit avoir 3 caracteres minimum</span>
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="greffier" class="col-sm-4 control-label">Nom et Prenom du greffier <span style="color:#dd4b39">(*)</span></label>

                            <div class="col-sm-5">
                                <input type="text" class="form-control" style="width:100%" name="greffier" id="greffier"
                                       placeholder="Entrer le nom et le prenom du greffier" ng-model="jugementFormItems.greffier"
                                       ng-minlength="3" required>
                                <span ng-show="formJugement.greffier.$error.minlength" class="help-block" style="color:#dd4b39">Le nom doit avoir 3 caracteres minimum</span>
                                <span ng-show="formJugement.greffier.$invalid && !formJugement.greffier.$pristine" class="help-block" style="color:#dd4b39">Champ reuis</span>
                            </div>
                        </div>

                        <!--<div class="form-group" style="margin-left: 8px">-->
                            <!--<label for="date_audience" class="col-sm-4 control-label">Date d'audience de l'affaire</label>-->

                            <!--<div class="col-sm-5 input-group date">-->
                                    <!--<div class="input-group-addon">-->
                                        <!--<i class="fa fa-calendar"></i>-->
                                    <!--</div>-->
                                    <!--<input type="date" class="form-control"-->
                                           <!--name="date_audience" ng-model="jugementFormItems.date_jugement"-->
                                           <!--style="width:362px">-->
                                <!--<span ng-show="formJugement.date_jugement.$error.minlength" class="help-block" style="color:#dd4b39">La longueur du nom doit exc√©der 3 caracteres</span>-->
                            <!--</div>-->
                        <!--</div>-->

                        <div class="form-group">
                            <label for="heure_audience" class="col-sm-4 control-label">Heure du jugement</label>

                            <div class="col-sm-5">
                                <input type="time" class="form-control"
                                       name="heure_audience" id="heure_audience" ng-model="jugementFormItems.heure_audience"
                                       style="width:100%">
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="salle_audience" class="col-sm-4 control-label">Salle du jugement <span style="color:#dd4b39">(*)</span></label>

                            <div class="col-sm-5">
                                <select class="form-control select2" style="width: 100%;" required ng-model="jugementFormItems.salle_audience">
                                    <option value=""></option>
                                    <option value="Petite salle d'audience">Petite salle d'audience</option>
                                    <option value="Grande salle d'audience">Grande salle d'audience</option>
                                </select>
                                <span ng-show="formJugement.salle_audience.$invalid && !formJugement.salle_audience.$pristine" class="help-block" style="color:#dd4b39">Champ reuis</span>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-sm-4 control-label">Observation</label>
                            <div class="col-sm-5">
                                <textarea class="form-control" rows="3" ng-model="jugementFormItems.observation"></textarea>
                            </div>
                        </div>
                    </div>
                    <!-- /.box-body -->
                    <div class="box-footer">
                        <div class="col-xs-12">
                            <a href="/listeJugements" class="btn btn-default"><i class="fa fa-arrow-circle-left"></i> Retour a la liste</a>
                            <button type="button" class="btn btn-primary pull-right" ng-disabled="formJugement.$invalid" ng-click="formJugement.$valid && ajouterJugement_FC(jugementFormItems)"><i class="fa fa-send"></i> Enregistrer
                            </button>
                        </div>
                    </div>
                    <!-- /.box-footer -->
                </form>
            </div>
        </div>
    </div>
</section>


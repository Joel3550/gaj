<% layout('layout') %>

<section class="content" ng-app="app" ng-controller="jugementController">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <a ng-click="ajouterAffaireAuRepertoirModal()" class="btn btn-success">
                        <i class="fa fa-plus"></i> Ajouter une affaire
                        <!--<span class="badge bg-red">{{nbrAffaireATraiter}}</span> Affaire/es a traiter-->
                    </a>
                    <a href="/editionExpedition_url" class="btn btn-warning">
                        <i class="fa fa-file-text"></i> Editer l'exp√©dition
                        <!--<span class="badge bg-red">{{nbrAffaireATraiter}}</span> Affaire/es a traiter-->
                    </a>
                </div>
                <!-- /.box-header -->
                <div class="box-body">

                    <div id="example1_wrapper" class="dataTables_wrapper form-inline dt-bootstrap">
                        <div class="row">
                            <div class=col-sm-6>
                                <div class="dataTables_length" id="example1_length">
                                    <label for="Vue">Vue
                                        <select ng-init="limit = 10" ng-model="limit" name="example1_length" aria-controls="example1" class="form-control input-sm">
                                            <option value="10">10</option>
                                            <option value="20">20</option>
                                            <option value="50">50</option>
                                            <option value="100">100</option>
                                            Lignes
                                        </select>
                                    </label>
                                </div>
                            </div>
                            <div class=col-sm-6>
                                <div id="example1_filter" class="dataTables_filter">
                                    <label for="Rechercher">Rechercher
                                        <input type="search" ng-model="filter.designation" class="form-control input-sm" placeholder="Par designation ..." aria-controls="example1"/>
                                    </label>
                                </div>
                            </div>
                        </div>

                        <div class="box-header with-border" style="border-left:3px solid #dd4b39">
                            <h3 class="box-title">LISTE DES AFFAIRES ENREGISTREES DANS LE REPERTOIRE</h3>
                        </div>
                        <div class="row">
                            <div class="col-sm-12 table-responsive">
                                <%- include repertoirJugementGrid %>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-5">
                                <div class="dataTables_info" id="example1_info" role="status" aria-live="polite">
                                </div>
                            </div>
                            <div class="col-sm-7">
                                <div class="dataTables_paginate paging_simple_numbers" id="example1_paginate">
                                    <ul class="pagination">
                                        <li class="paginate_bottom previous disabled" id="example1_previous">
                                            <a href="#" aria-controls="example1" data-dt-idx="0" tabindex="0">Precedent</a>
                                        </li>
                                        <li class="paginate_bottom active">
                                            <a href="#" aria-controls="example1" data-dt-idx="1" tabindex="0">1</a>
                                        </li>
                                        <li class="paginate_bottom">
                                            <a href="#" aria-controls="example1" data-dt-idx="2" tabindex="0">2</a>
                                        </li>
                                        <li class="paginate_bottom">
                                            <a href="#" aria-controls="example1" data-dt-idx="3" tabindex="0">3</a>
                                        </li>
                                        <li class="paginate_bottom">
                                            <a href="#" aria-controls="example1" data-dt-idx="4" tabindex="0">4</a>
                                        </li>
                                        <li class="paginate_bottom">
                                            <a href="#" aria-controls="example1" data-dt-idx="5" tabindex="0">5</a>
                                        </li>
                                        <li class="paginate_bottom next" id="example1_next">
                                            <a href="#" aria-controls="example1" data-dt-idx="6" tabindex="0">Suivant</a>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</section>

<script src="/angular/angular.js"></script>
<script src="/angular/angular.min.js"></script>
<script src="//ajax.googleapis.com/ajax/libs/angularjs/1.5.3/angular-animate.js"></script>
<script src="/javascripts/app/jugement/jugementController.js"></script>


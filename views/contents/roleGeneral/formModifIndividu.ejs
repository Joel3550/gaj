<div class="row">
    <div class="col-md-12">
        <div role="form">
            <div class="modal-header" ng-if="!verifStatut" style="background-color:#357ca5; color:#fff">
                <span><i class="fa fa-info-circle"></i> FORMULAIRE DE MODIFICATION DU {{parties.libelle_typeIndividu | uppercase}}</span>
            </div>

            <div class="col-xs-12">
                <div ng-show="message" class="alert {{message.class}}">{{message.msg}}</div>
            </div>

            <div class="tab-content">
                <div class="tab-pane active" id="formAjoutDemandeur">
                    <form class="form-horizontal" name="form.individuForm" role="form" method="post" novalidate>
                        <div class="modal-body">
                            <div class="form-group">
                                <label for="nom_individu" class="col-sm-4 control-label">Nom <span style="color: #dd4b39">(*)</span></label>

                                <div class="col-sm-6">
                                    <input type="text" class="form-control" style="width:100%" name="nom_individu" id="nom_individu"
                                           placeholder="Entrer le nom" ng-model="parties.nom_individu"
                                           ng-minlength="3" required>
                                    <span ng-show="form.individuForm.nom_individu.$error.minlength" class="help-block" style="color:#dd4b39">Le nom du demandeur doit avoir 3 caracteres minimum</span>
                                    <span ng-show="form.individuForm.nom_individu.$invalid && !form.individuForm.nom_individu.$pristine" class="help-block" style="color:#dd4b39">Champ requis</span>
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="prenom_individu" class="col-sm-4 control-label">Prenom <span style="color: #dd4b39">(*)</span></label>

                                <div class="col-sm-6">
                                    <input type="text" class="form-control" style="width:100%" name="prenom_individu" id="prenom_individu"
                                           placeholder="Entrer le prennom" ng-model="parties.prenom_individu"
                                           ng-minlength="3" required>
                                    <span ng-show="form.individuForm.prenom_individu.$error.minlength" class="help-block" style="color:#dd4b39">Le prennom du demandeur doit avoir 3 caracteres minimum</span>
                                    <span ng-show="form.individuForm.prenom_individu.$invalid && !form.individuForm.prenom_individu.$pristine" class="help-block" style="color:#dd4b39">Champ requis</span>
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="age" class="col-sm-4 control-label">Age</label>

                                <div class="col-sm-6">
                                    <input type="text" class="form-control" style="width:100%" name="age" id="age"
                                           placeholder="Entrer l'age" ng-model="parties.age">
                                </div>
                            </div>

                            <div class="form-group">
                                <!--<label for="id_individu" class="col-sm-4 control-label">Numero ordre affaire</label>-->

                                <div class="col-sm-6">
                                    <input type="hidden" class="form-control" style="width:100%" name="id_individu" id="id_individu"
                                           ng-model="parties.id_individu" disabled="disabled">
                                </div>
                            </div>
                            <!--<div class="form-group">-->
                                <!--<div class="col-sm-6">-->
                                    <!--<input type="hidden" class="form-control" style="width:100%" name="id_typeIndividu" id="id_typeIndividu"-->
                                           <!--ng-model="individuFormItems.id_typeIndividu_demandeur"  disabled="disabled" value="individuFormItems.id_typeIndividu_individu">-->
                                <!--</div>-->
                            <!--</div>-->
                            <!--<div class="form-group">-->
                                <!--<div class="col-sm-6">-->
                                    <!--<input type="hidden" class="form-control" style="width:100%" name="lierAffaire" id="lierAffaire" ng-model="individuFormItems.lierAffaire"-->
                                           <!--value="{{individuFormItems.lierAffaire}}" disabled="disabled">-->
                                <!--</div>-->
                            <!--</div>-->
                        </div>
                        <div class="modal-footer" style="background-color:#357ca5; color:#fff">
                            <div class="col-xs-12">
                                <button type="button" class="btn btn-danger" ng-click="cancel()"><i class="fa fa-close"></i> Fermer</button>
                                <!--<button type="submit" class="btn btn-primary pull-right" ng-disabled="form.coursForm.$invalid" ng-click="form.coursForm.$valid && ajouterCours_FC(coursFormItems)"><i class="fa fa-save"></i> Enregistrer-->
                                <button type="submit" class="btn btn-outline pull-right" ng-disabled="form.individuForm.$invalid" ng-click="form.individuForm.$valid && modifIndividu_FC(parties)"><i class="fa fa-refresh"></i> Appliquer la modification
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="/angular/angular.js"></script>
<script src="/angular/angular.min.js"></script>
<script src="//ajax.googleapis.com/ajax/libs/angularjs/1.5.3/angular-animate.js"></script>
<script src="//angular-ui.github.io/bootstrap/ui-bootstrap-tpls-1.3.2.js"></script>

<% layout('layout') %>

<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <!-- /.box-header -->
                <div class="box-body" ng-app="app" ng-controller="roleGeneralController">

                    <div id="example1_wrapper" class="dataTables_wrapper form-inline dt-bootstrap">
                        <div class="row">
                            <div class=col-sm-6>
                                <div class="dataTables_length" id="example1_length">
                                    <label for="Vue">Vue
                                        <select ng-init="limit = 10" ng-model="limit"  name="example1_length" aria-controls="example1" class="form-control input-sm">
                                            <option value="10">10</option>
                                            <option value="20">20</option>
                                            <option value="50">50</option>
                                            <option value="100">100</option>
                                            Lignes
                                        </select>
                                    </label>
                                </div>
                            </div>
                            <div style="margin-right: 20px">
                                <div id="example1_filter" class="dataTables_filter">
                                    <label for="date_saisie_affaire">
                                        <select class="form-control" name="date_saisie_affaire" id="date_saisie_affaire" ng-model="searchItem.date_saisie_affaire">
                                            <option value="">Rechercher par date de saisie</option>
                                            <option ng-repeat="date in affaireDate" value="{{date.date_saisie_affaire}}" ng-if="date.id_user_affaire == id_user">{{date.date_saisie_affaire | date:'dd/MM/yyyy'}}</option>
                                        </select>
                                        <!--<input type="date" name="date_saisie_affaire" value="{{searchItem.date_saisie_affaire}}" id="date_saisie_affaire" ng-model="searchItem.date_saisie_affaire"/>-->
                                    </label>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-12">
                                <%- include consultationAffaireGrid %>
                            </div>
                        </div>
                        <div>
                            <a href="#" class="btn btn-default"><i class="fa fa-print"></i> Imprimer le registre</a>
                        </div>
                        <div class="row">
                            <div class="col-sm-5">
                                <div class="dataTables_info" id="example1_info" role="status" aria-live="polite">
                                </div>
                            </div>
                            <div class="col-sm-7">
                                <div class="dataTables_paginate paging_simple_numbers" id="example1_paginate">
                                    <ul class="pagination">
                                        <li class="paginate_bottom previous disabled" id="example1_previous">
                                            <a href="#" aria-controls="example1" data-dt-idx="0" tabindex="0">Precedent</a>
                                        </li>
                                        <li class="paginate_bottom active">
                                            <a href="#" aria-controls="example1" data-dt-idx="1" tabindex="0">1</a>
                                        </li>
                                        <li class="paginate_bottom">
                                            <a href="#" aria-controls="example1" data-dt-idx="2" tabindex="0">2</a>
                                        </li>
                                        <li class="paginate_bottom">
                                            <a href="#" aria-controls="example1" data-dt-idx="3" tabindex="0">3</a>
                                        </li>
                                        <li class="paginate_bottom">
                                            <a href="#" aria-controls="example1" data-dt-idx="4" tabindex="0">4</a>
                                        </li>
                                        <li class="paginate_bottom">
                                            <a href="#" aria-controls="example1" data-dt-idx="5" tabindex="0">5</a>
                                        </li>
                                        <li class="paginate_bottom next" id="example1_next">
                                            <a href="#" aria-controls="example1" data-dt-idx="6" tabindex="0">Suivant</a>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</section>

